{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "indent": ["error", 2],
        "react/prop-types": 0,
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "react/no-array-index-key": 0,
        "quotes": [2, "single", { "avoidEscape": true }]
    }
}
